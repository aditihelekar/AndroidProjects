<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtSavedCityCountry"
        android:layout_toEndOf="@+id/txtSavedCityCountry"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:id="@+id/txtSavedTemp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtSavedTemp"
        android:layout_alignStart="@+id/txtSavedTemp"
        android:layout_marginBottom="38dp"
        android:id="@+id/txtSavedLastUpdated" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/star_gray"
        android:layout_above="@+id/txtSavedLastUpdated"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp"
        android:id="@+id/imgSavedFav"
        android:scaleType="fitCenter" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSavedCityCountry"
        android:layout_alignTop="@+id/imgSavedFav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />
</RelativeLayout>